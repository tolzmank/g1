<!-- UPDATE DETAILS WINDOW -->
<body>
    <div id="edit">
        <form id="updateUser" action="/update_condition/{{ condition[0].condition_id }}" method="POST">
            <legend><strong>Update Condition Details</strong></legend>
            <fieldset>

                <!-- ITEM ATTRIBUTES -->
                <input type="hidden" value="{{ condition[0].condition_id }}" class="form-control" id="condition_id" name="condition_id" required>
                
                <label for="make">Condition Type:</label>
                <input type="text" value="{{ condition[0].condition_type }}" class="form-control" id="condition_type" name="condition_type" required>
                
                <label for="model">Measurement Unit:</label>
                <input type="text" value="{{ condition[0].measurement_unit }}" class="form-control" id="measurement_unit" name="measurement_unit" required>
                
            </fieldset>


            <!-- CONFIRM UPDATE/CANCEL BUTTONS -->
            <input type="submit" value="Update User" name="Update_Condition" class="btn btn-primary" style="margin:.5rem;">
            <button class="btn" type="button" onclick="window.location.href='/conditions';">Cancel</button>

        </form>

</html>