<!-- DELETE CONFIRMATION WINDOW -->
<body>
    <div id="delete" style="display: block">
    <form id="deleteCondition" action="/delete_condition/{{ condition[0].condition_id }}" method="POST" >
        <legend><strong>Confirm Delete Condition/strong></legend>
            <fieldset class="fields">
            <p>Are you sure you wish to delete the following?</p>


            <!-- ITEM ATTRIBUTES -->
            <div><label><strong>Condition ID: </strong></label> {{ condition[0].condition_id }}</div>
            <div><label><strong>Condition Type: </strong></label> {{ condition[0].condition_type }}</div>
            <div><label> <strong>Measurement Unit: </strong> </label> {{ condition[0].measurement_unit }}</div>
        </fieldset>


        <!-- CONFIRM/CANCEL BUTTONS -->
        <input class="btn" type="submit" name="Delete_Condition" value="Delete Condition">
        <button class="btn" type="button" onclick="window.location.href='/conditions';">Cancel</button>
    </form> 
    </div>

